<body class="color_home">
  <h1 align="center">All Alpha Bloggers</h1>
  <div align="center">
    <%= will_paginate @user %>
    <% @user.each do |user| %>
        <ul class = "listing">
          <div class ="row">
            <div class = "well col-md-4 col-md-offset-4 color-targets">
              <li>
                <%= link_to gravatar_for(user), user_path(user) %>
              </li>
              <li class = "article-title">
                <%= link_to user.username, user_path(user) %>
              </li>
              <li>
                <small><%= pluralize(user.article.count,"article") if user.article %></small>
              </li>
              <% if logged_in? and current_user.admin? %>
                <li><%= link_to "Delete this user", user_path(user), method: :delete,
                        data: {confirm: "Are you sure?"}%></li>
              <% end %>
            </div>
          </div>
        </ul>
    <%end%>
    <%= will_paginate @user %>
  </div>
</body>